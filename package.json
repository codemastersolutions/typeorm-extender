{
  "name": "@codemastersolutions/typeorm-extender",
  "version": "0.0.4",
  "description": "Utility to extend TypeORM functionalities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "README_es.md",
    "README_pt_BR.md",
    "LICENSE",
    "LICENSE_es.md",
    "LICENSE_pt_BR.md"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.build.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "version:bump": "node scripts/get-version-bump.js",
    "changelog:generate": "node scripts/generate-changelog.js",
    "release:check": "npm run test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codemastersolutions/typeorm-extender.git"
  },
  "keywords": [
    "codemaster",
    "codemastersolutions",
    "cms",
    "code",
    "master",
    "solutions",
    "typeorm",
    "typeorm-cli",
    "typeorm-extender",
    "extender",
    "extender-cli",
    "cli",
    "migration",
    "seed",
    "factory",
    "migrations",
    "seeds",
    "factories",
    "migrator",
    "generator",
    "npm"
  ],
  "author": "Gilson Gabriel",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/codemastersolutions/typeorm-extender/issues"
  },
  "homepage": "https://github.com/codemastersolutions/typeorm-extender#readme",
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "conventional-changelog-cli": "^5.0.0",
    "conventional-recommended-bump": "^10.0.0",
    "semver": "^7.6.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "typeorm": ">=0.3.0"
  },
  "engines": {
    "node": ">= 18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
